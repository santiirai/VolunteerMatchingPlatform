generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(VOLUNTEER)
  skills   String? // comma-separated or JSON string
  location String?

  // relations
  opportunities Opportunity[] @relation("OrganizationOpportunities")
  applications  Application[] @relation("VolunteerApplications")
  messagesSent  Message[]     @relation("Sender")
  messagesRecv  Message[]     @relation("Receiver")
  certificates  Certificate[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  VOLUNTEER
  ORGANIZATION
}

model Opportunity {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  requiredSkills String?
  location       String?
  date           DateTime

  organizationId Int
  organization   User @relation("OrganizationOpportunities", fields: [organizationId], references: [id])

  applications Application[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  certificates Certificate[]
}

model Application {
  id Int @id @default(autoincrement())

  opportunityId Int
  opportunity   Opportunity @relation(fields: [opportunityId], references: [id])

  volunteerId Int
  volunteer   User @relation("VolunteerApplications", fields: [volunteerId], references: [id])

  message String?
  status  ApplicationStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ApplicationStatus {
  PENDING
  ACCEPTED
  REJECTED
  COMPLETED
}

model Message {
  id         Int     @id @default(autoincrement())
  senderId   Int
  receiverId Int
  content    String
  isRead     Boolean @default(false)

  sender   User @relation("Sender", fields: [senderId], references: [id])
  receiver User @relation("Receiver", fields: [receiverId], references: [id])

  createdAt DateTime @default(now())
}

model Certificate {
  id             Int      @id @default(autoincrement())
  userId         Int
  opportunityId  Int
  certificateUrl String
  issuedAt       DateTime @default(now())

  user        User        @relation(fields: [userId], references: [id])
  opportunity Opportunity @relation(fields: [opportunityId], references: [id])
}
